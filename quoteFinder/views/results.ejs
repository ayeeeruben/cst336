<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</head>
<body class="text-center">
    <h1 class="text-center bg-primary text-white p-4">Famous Quotes</h1>

    <% for (let row of rows) { %>
    "<%= row.quote%> "<br>
    <a class="authots" href="#" onclick="getAuthorInfo(<%= row.authorId %>)"> <%= row.firstName %> <%= row.lastName %> </a>
    <br><br>
    <% } %> 

    <div id="authorInfo">
        <h2 id="authorName"></h2>
        <img id="authorImage" src="" alt="">
    </div>

    $(".authors").addEventListener("click", getAuthorInfo);

    <script>
        function $(selector){
            return document.querySelector(selector);
        }

        async function getAuthorInfo() {
            let authorId = this.getAttribute("authorId");
            let url = "api/author/" + authorId;
            let response = await fetch(url);
            let data = await response.json();
            console.log(data);
            $("#authorName").textContent = data[0].firstName + " " + data[0].lastName;
            $("#aithorImage").src = data[0].portrait;
        }
    </script>
</body>
</html>